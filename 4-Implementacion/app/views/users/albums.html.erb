<h1>Albumes de <%= @user.to_s %></h1>

<table>
<% @albums.each do |album| %>
  <tr>
    <td><%= link_to album.name, album %></td>
    <td><%= link_to 'Eliminar', album, method: :delete, data: { confirm: 'Seguro desea eliminar?' } %></td>
  </tr>
<% end %>
</table>

<br />

<% if @user.id == current_user.id %>
  <%= link_to 'Nuevo Album', new_album_path %>
<% end %>
