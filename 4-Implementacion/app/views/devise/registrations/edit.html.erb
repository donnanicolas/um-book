<h1>Editar usuario</h1>
<div class="span12">
  <%= form_for @user, :url => users_path, :html => { :multipart => true } do |form| %>
    <div class="span4 offset3">
      <%= image_tag @user.profile_photo.url(:medium) %>
      
      Maximo 500kb
      <%= form.file_field :profile_photo %>
      <%= form.password_field :current_password, placeholder: "Clave actual" %>

      <br /><br />
      Dejar en blanco si no queres modificarla
      <%= form.password_field :password, placeholder: "Nueva clave" %>
      <%= form.password_field :password_confirmation, placeholder: "Confirmacion de nueva clave" %>

      <%= form.submit "Modificar" %>
    </div>

  <% end %>
</div>
