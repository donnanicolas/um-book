<div class="span7 offset2">
  <%= image_tag @photo.file.url(:medium) %>
  <b><%= @photo.description %></b>
  <div class="place-right">
    <% if @photo.album.user.id == current_user.id %>
      <%= link_to 'Eliminar', @photo, method: :delete, data: { confirm: 'Seguro desea eliminar?' } %>
      <br />
    <% end %>
    <%= link_to 'Volver a Album', album_path(@photo.album) %>
  </div>
</div>
